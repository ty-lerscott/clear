{
	"extends": "../tsconfig.root.json",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist",
		"moduleResolution": "bundler",
		"rootDir": "../",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"~/*": ["../*"],
			"@/*": ["./*", "./src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
